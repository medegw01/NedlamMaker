<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id = "@+id/drawer_layout"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context= "com.example.user.nedlamworkshop.MainActivity">

    <!--main content (main screen)-->
    <RelativeLayout
        android:id = "@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>
    <!--drawer pane-->
    <RelativeLayout
        android:id = "@+id/drawer_pane"
        android:layout_width="280dp"
        android:layout_gravity = "start"
        android:layout_height="match_parent"
        >
        <!--profile-->
        <RelativeLayout
            android:id ="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#11d0ed"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id = "@+id/picture"
                android:background="@drawable/makerlab" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/picture"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome"
                    android:id="@+id/tool_descriptionX"
                    android:textSize="16sp"
                    android:textColor="#0c0c0c"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tool name"
                    android:id="@+id/tool_nameX"
                    android:textSize="16sp"
                    android:textColor="#0c0c0c"/>



            </LinearLayout>

        </RelativeLayout>
        <ListView
            android:id = "@+id/nav_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/profile"
            android:layout_alignParentBottom="true"
            android:choiceMode="singleChoice"></ListView>




    </RelativeLayout>


</android.support.v4.widget.DrawerLayout>